<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    android:id="@+id/parent_item"
    >


    <ImageView
        android:id="@+id/icon_account_zhanghao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_account_zhanghao"
        android:layout_centerVertical="true"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon_account_zhanghao"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/account_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/new_color_primary"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/account_province_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#808080"
            android:textSize="14sp"
            android:text=""
            />

    </LinearLayout>


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:layout_toLeftOf="@+id/account_add_car_tv"
        />

    <TextView
        android:id="@+id/delete_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/category_iv_itemone_arrow"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:text=""
        android:textColor="@color/new_color_primary"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/shancu"
        />



    <TextView
        android:id="@+id/account_add_car_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/delete_count_tv"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.0dip"
        android:text=""
        android:textColor="@color/yellow"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/tianjiacheliang"
        />

    <ImageView
        android:id="@+id/category_iv_itemone_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/category_iv_oneitem_arrow_down" />

</RelativeLayout>