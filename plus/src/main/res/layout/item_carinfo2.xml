<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginLeft="3dip"
    android:weightSum="3"
    android:background="@drawable/kuang2_index"
    android:padding="5dp"
    >
    <LinearLayout
        android:id="@+id/car_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left|top"
        android:layout_marginLeft="15dp"
        android:layout_weight="2"
        android:paddingBottom="10dp"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nextcar_btn"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"

        >
        <TextView
            android:id="@+id/carnum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=""
            android:drawablePadding="10dip"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:drawableRight="@drawable/bianji"
            />

        <TextView
            android:id="@+id/remark_tv"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="未设置备注信息"
            android:textSize="10sp"
            android:lines="1"
            android:layout_marginTop="3dip"
            />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/violation_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
       >

        <TextView
            android:id="@+id/weichuli_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/new_color_primary"
            android:text="未处理违章"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:id="@+id/weichuli_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/illegal_num_tv"
            android:layout_centerVertical="true"
            >

            <!--<TextView-->
                <!--android:id="@+id/illegal_num_tv"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="0"-->
                <!--android:layout_marginTop="0dip"-->
                <!--android:gravity="center"-->
                <!--android:textColor="@color/colorPrimary"-->
                <!--android:textSize="27sp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--/>-->


            <TextView
                android:id="@+id/illegal_degree_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扣分-分"
                android:textSize="14sp"
                android:layout_below="@+id/weichuli_tv"
                android:layout_marginTop="5dip"
                />

            <TextView
                android:id="@+id/illegal_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="罚款-元"
                android:textSize="14sp"
                android:layout_below="@+id/illegal_degree_tv"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="8dip"
                />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="1dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:background="@drawable/xianduan"-->
        <!--android:layout_marginBottom="0dp"-->
        <!--android:layout_gravity="bottom"-->
        <!--/>-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="right"
        android:paddingRight="10dp"
        android:paddingBottom="6dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="2"
            >

        <ImageView
            android:id="@+id/car_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/car_index"
            android:padding="3dp"
            android:layout_gravity="center"
            android:clickable="false"
            android:layout_weight="1.5"
            android:layout_marginTop="3dp"
            />

            <TextView
                android:id="@+id/kaisuchaxun_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快速查询"
                android:drawableTop="@drawable/kuaisu"
                android:drawablePadding="10dip"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:layout_weight="1"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="top"
            android:layout_margin="5dp"
            >

            <!--<ImageView-->
                <!--android:id="@+id/ischeck_img"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/xinxiwu"-->
                <!--android:layout_gravity="top"-->
                <!--/>-->
        </LinearLayout>

    </LinearLayout>

</LinearLayout>