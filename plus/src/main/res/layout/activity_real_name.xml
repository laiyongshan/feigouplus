<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/gray"
    >

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/new_color_primary"
        android:layout_height="@dimen/topbar_size">

        <ImageButton
            android:id="@+id/real_name_back_ib"
            android:background="@null"
            android:clickable="true"
            android:layout_width="50dp"
            android:layout_height="500dp"
            android:src="@drawable/icon_back"
            />
        <TextView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实名认证"
            android:textSize="@dimen/title_size"
            android:textColor="#FFFFFF"
            android:id="@+id/textView" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/commit_other_layout"
        android:visibility="visible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            >


            <!--是否验证-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:visibility="visible"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:padding="12dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:text="是否验证"
                    android:paddingRight="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

                <RelativeLayout
                    android:id="@+id/car_verify_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="6dp"
                    >

                    <TextView
                        android:id="@+id/is_verify_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未验证"
                        android:layout_toLeftOf="@+id/verify_img"
                        android:layout_marginRight="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/red"
                        android:gravity="center_vertical"
                        />

                    <ImageView
                        android:id="@+id/verify_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />



            <!--真实姓名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="真实姓名"
                    />

                <com.example.youhe.youhecheguanjiaplus.widget.ClearEditText
                    android:id="@+id/real_name_et"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/blue"
                    android:background="@color/lucency"
                    android:hint="请输入真实姓名"
                    android:padding="10dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="6dp"
                    android:onClick="realNameQR"
                    android:src="@drawable/icon_green_qr"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />


            <!--证件类型-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="证件类型"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp"
                    android:text="身份证"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />

            <!--证件号码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="证件号码"
                    />

                <com.example.youhe.youhecheguanjiaplus.widget.ClearEditText
                    android:id="@+id/idcard_num_et"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/blue"
                    android:background="@color/lucency"
                    android:hint="请输入身份证号"
                    android:padding="10dp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="证件照片"
                    android:padding="15dp"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:paddingTop="10dp"
                    >

                    <ImageView
                        android:id="@+id/idcard_zhengmian_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shenfenzheng1"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:background="@color/lucency"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_centerInParent="true"/>


                    <ImageView
                        android:id="@+id/idcard_fanmian_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shenfenzheng2"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@color/lucency"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_centerInParent="true"
                        />


                    <ImageView
                        android:id="@+id/head_idcard_zhengmian_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shenfenzheng3"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:background="@color/lucency"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_centerInParent="true"/>


                    <ImageView
                        android:id="@+id/head_idcard_fanmian_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shenfenzheng4"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@color/lucency"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_centerInParent="true"
                        />


                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/commit_real_name_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提交审核"
                android:textColor="@color/white"
                android:background="@drawable/affirmbutton3"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:gravity="center"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>