<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    >

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/topbar_size"
        android:background="@color/new_color_primary"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="驾照详情"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:id="@+id/add_lisence_back_img"
            android:src="@drawable/icon_back" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:text="@string/add_major_violation_tips"
                android:drawableLeft="@drawable/laba"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                />

            <!--驾驶人姓名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
               android:padding="10dp"
                >

                <TextView
                    android:id="@+id/carEngine_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:text="驾  驶  人"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    android:layout_marginRight="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    />

                    <EditText
                        android:id="@+id/majorviolation_name_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="请输入驾驶人姓名"
                        android:textSize="16sp"
                        android:layout_toLeftOf="@+id/doubt_img"
                        android:layout_alignParentLeft="true"
                        android:textColorHint="@color/hint_gray"
                        android:textColor="#606060"
                        android:maxLength="25"
                        android:layout_marginRight="23dp"
                        />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />

            <!--档案编号-->
            <LinearLayout
                android:id="@+id/carEngine_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="档案编号"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:id="@+id/textView3" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginRight="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        />

                    <EditText
                        android:id="@+id/file_number_et"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="请输入完整档案编号"
                            android:textSize="16sp"
                            android:layout_toLeftOf="@+id/doubt_img"
                            android:layout_alignParentLeft="true"
                            android:textColorHint="@color/hint_gray"
                            android:textColor="#606060"
                            android:maxLength="12"
                            android:layout_marginRight="23dp"
                            />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />

            <!--驾驶证号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="驾驶证号"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginRight="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        />

                    <EditText
                        android:id="@+id/driving_license_no_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="请输入完整驾驶证号"
                        android:textSize="16sp"
                        android:layout_toLeftOf="@+id/doubt_img"
                        android:layout_alignParentLeft="true"
                        android:textColorHint="@color/hint_gray"
                        android:textColor="#606060"
                        android:maxLength="18"
                        android:layout_marginRight="23dp"
                        />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />

            <!--车主联系电话-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="车主电话"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginRight="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="请输入车主联系电话"
                        android:textSize="16sp"
                        android:layout_toLeftOf="@+id/doubt_img"
                        android:layout_alignParentLeft="true"
                        android:textColorHint="@color/hint_gray"
                        android:textColor="#606060"
                        android:maxLength="11"
                        android:layout_marginRight="23dp"
                        android:inputType="number"
                        android:id="@+id/car_owner_phone_et" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    />

            </LinearLayout>

            <!--发动机号-->
            <LinearLayout
                android:id="@+id/car_carcode_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="发动机号"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginRight="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="请输入车辆完整的发动机号"
                        android:textSize="16sp"
                        android:layout_toLeftOf="@+id/doubt_img"
                        android:layout_alignParentLeft="true"
                        android:textColorHint="@color/hint_gray"
                        android:textColor="#606060"
                        android:maxLength="11"
                        android:layout_marginRight="23dp"
                        android:inputType="number"
                        android:id="@+id/car_carcode_et" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    />

            </LinearLayout>



            <!--备选信息1-->
            <LinearLayout
                android:id="@+id/chezhu_idcar_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    >
                    <TextView
                        android:id="@+id/chezhu_idcar_info_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="身份证号"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginRight="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        />

                    <EditText
                        android:id="@+id/chezhu_idcar_info_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="请输入车主身份证号"
                        android:textSize="16sp"
                        android:layout_toLeftOf="@+id/doubt_img"
                        android:layout_alignParentLeft="true"
                        android:textColorHint="@color/hint_gray"
                        android:textColor="#606060"
                        android:layout_marginRight="23dp"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    />
            </LinearLayout>



            <!--备选信息2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/tiaoxiangma_ll"
                android:visibility="gone"
                >
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    >
                    <TextView
                        android:id="@+id/tiaoxingma_info_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="驾照条形码"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginRight="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        />

                    <EditText
                        android:id="@+id/tiaoxingma_info_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="请输入驾驶证条形码"
                        android:textSize="16sp"
                        android:layout_toLeftOf="@+id/doubt_img"
                        android:layout_alignParentLeft="true"
                        android:textColorHint="@color/hint_gray"
                        android:textColor="#606060"
                        android:layout_marginRight="23dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    />

            </LinearLayout>

            <!--备选信息3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/xingshi_danganbianhao_ll"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    >
                    <TextView
                        android:id="@+id/xingshi_danganbianhao_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="行驶证档案编号"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginRight="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        />

                    <EditText
                        android:id="@+id/xingshi_danganbianhao_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="请输入行驶证档案码"
                        android:textSize="16sp"
                        android:layout_toLeftOf="@+id/doubt_img"
                        android:layout_alignParentLeft="true"
                        android:textColorHint="@color/hint_gray"
                        android:textColor="#606060"
                        android:layout_marginRight="23dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    />

            </LinearLayout>




            <!--备选信息4-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/dengji_zhengshu_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/dengji_zhengshu_info_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="车辆登记证书号"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginRight="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        />

                    <EditText
                        android:id="@+id/dengji_zhengshu_info_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="请输入车辆登记证书号"
                        android:textSize="16sp"
                        android:layout_toLeftOf="@+id/doubt_img"
                        android:layout_alignParentLeft="true"
                        android:textColorHint="@color/hint_gray"
                        android:textColor="#606060"
                        android:layout_marginRight="23dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    />
            </LinearLayout>

            <!--车主资料 上传驾照，行驶证图片-->
            <LinearLayout
                android:id="@+id/upload_car_owner_info_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/laybeijin"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:text="驾照图片"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

                <RelativeLayout
                    android:id="@+id/car_owner_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    >

                    <TextView
                        android:id="@+id/car_owner_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击添加/修改"
                        android:layout_toLeftOf="@+id/car_owner_right_img"
                        android:layout_marginRight="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/blue"
                        android:gravity="center_vertical"
                        />

                    <ImageView
                        android:id="@+id/car_owner_right_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:text="@string/driving_license_phone_number_tips"
                android:layout_margin="10dp"
                />


            <!--手机号码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="手机号码"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginRight="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="考驾照登记的手机号"
                        android:textSize="16sp"
                        android:layout_toLeftOf="@+id/doubt_img"
                        android:layout_alignParentLeft="true"
                        android:textColorHint="@color/hint_gray"
                        android:textColor="#606060"
                        android:maxLength="11"
                        android:layout_marginRight="23dp"
                        android:inputType="number"
                        android:id="@+id/driving_license_phone_number" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/gray"
                />


            <Button
                android:id="@+id/save_majorviolation_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/affirmbutton3"
                android:text="保      存"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="25dp"
                />

        </LinearLayout>
    </ScrollView>


</LinearLayout>