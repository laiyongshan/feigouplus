<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:clipChildren="false"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/topbar_size"
            android:layout_alignParentTop="true"
            android:background="@color/new_color_primary">
            <ImageView
                android:id="@+id/image_auto_refresh"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:clickable="true"
                android:src="@mipmap/ic_auto_refresh" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/plus_invite"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:text="分销记录"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/round_corner_new_color_primary"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="邀请码 "
                android:textColor="@color/plus_deep_orange"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="56dp"
                android:paddingTop="32dp"
                android:paddingLeft="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/bg1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_1"
                    android:text=""
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/new_color_primary" />
                <TextView
                    android:id="@+id/tv_2"
                    android:text=""
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/new_color_primary" />
                <TextView
                    android:id="@+id/tv_3"
                    android:text=""
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/new_color_primary" />
                <TextView
                    android:id="@+id/tv_4"
                    android:text=""
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textColor="@color/new_color_primary" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_share"
                android:clickable="true"
                android:text="分享"
                android:drawableLeft="@drawable/fenxianga"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/new_color_primary"
                style="@style/layoutWrapWrap" />
            <TextView
                android:id="@+id/text_copy"
                android:layout_marginRight="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="复制"
                android:clickable="true"
                android:drawableLeft="@drawable/selector_copy"
                android:drawablePadding="8dp"
                android:layout_centerInParent="true"
                android:textSize="17sp"
                android:textColor="@drawable/selector_share_text"/>
            <TextView
                android:id="@+id/tv_QrCode"
                android:clickable="true"
                android:text="二维码"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/erweima"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/new_color_primary"
                style="@style/layoutWrapWrap" />
        </RelativeLayout>


    </LinearLayout>
</layout>