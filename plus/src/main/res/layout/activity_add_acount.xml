<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/topbar_size"
        android:background="@color/new_color_primary"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="添加账号"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:id="@+id/addaccount_back_img"
            android:src="@drawable/icon_back" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <!--省份-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="省    份"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="15dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="6dp">

                    <TextView
                        android:id="@+id/province_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:hint="请选择查询省份"
                        android:textSize="16sp"
                        android:textColorHint="@color/hint_gray"
                        android:textColor="#606060"
                        android:maxLength="30"
                        android:drawableRight="@drawable/icon_xiala"
                        />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E8F9"
                />


            <!--账号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="账    号"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="15dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="6dp"
                    >
                    <EditText
                        android:id="@+id/vehicleAccount_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:hint="请输入已注册账号"
                        android:textSize="16sp"
                        android:textColorHint="@color/hint_gray"
                        android:textColor="@color/black"
                        android:maxLength="30"
                        />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E8F9"
                />


            <!--备注-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="密    码"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="15dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="6dp"
                    >
                    <EditText
                        android:id="@+id/psw_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:hint="请输入账户密码"
                        android:textSize="16sp"
                        android:textColorHint="@color/hint_gray"
                        android:textColor="@color/black"
                        android:maxLength="30"
                        android:inputType="textPassword"
                        />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E8F9"
                />


            <!--请输入验证码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="验证码"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="15dp"
                    />

                <EditText
                    android:id="@+id/yanzhenmima_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/edit_auth_code"
                    android:textColorHint="#a0a0a0"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:background="@color/lucency"
                    android:gravity="left"
                    android:paddingLeft="6dp"
                    />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#a0a0a0"
                    />



                <ImageView
                    android:id="@+id/yzm_img"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/yanzhengma1"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E8F9"
                />

            <RelativeLayout
                android:layout_above="@+id/pay"
                android:layout_marginBottom="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/laybeijin"
                android:padding="10dp"
                android:gravity="center_vertical"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/isread_cb"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:checked="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本人已阅读"
                    android:id="@+id/tv1"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/isread_cb"
                    android:layout_toEndOf="@+id/isread_cb"
                    android:textColor="@color/black"
                    android:layout_marginLeft="1dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《授权服务协议》"
                    android:id="@+id/disclaimer122_tv"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv1"
                    android:layout_toEndOf="@+id/tv1"
                    android:textColor="@drawable/textselector"
                    android:layout_marginLeft="1dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/go_to_regist_tv"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/icon_right"
                    android:layout_centerVertical="true"
                    android:text="去注册"
                    android:textColor="@drawable/textselector"
                    />
            </RelativeLayout>


            <Button
                android:id="@+id/add_account_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="绑定账号"
                android:background="@drawable/affirmbutton3"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />


            <TextView
                android:id="@+id/forget_password_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icon_right"
                android:layout_centerVertical="true"
                android:text="忘记密码？"
                android:textColor="@drawable/textselector"
                android:layout_gravity="right"
                android:gravity="right"
                />


            <TextView
                android:id="@+id/add_account_erromsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/zhuyi"
                android:drawablePadding="10dp"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:textColor="@color/red"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>