<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    android:background="#F1F1F1"
    android:scrollbars="none"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="2dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:background="@color/new_color_primary"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/wangjimina_fanhuijian"
                android:layout_centerVertical="true"
                android:background="@null"
                android:onClick="fanhui"
                android:layout_width="50dp"
                android:clickable="true"
                android:layout_height="40dp"
                android:src="@drawable/icon_back"
                />
            <TextView
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:textSize="@dimen/title_size"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="#FFFFFF"
                android:id="@+id/textView" />
        </RelativeLayout>

        <com.example.youhe.youhecheguanjiaplus.widget.ClearEditText
            android:id="@+id/yijianfankui_et"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="start"
            android:padding="10dp"
            android:maxLength="400"
            android:hint="请输入您遇见的问题或告诉我们您的宝贵意见...."
            android:textColor="@color/black"
            android:textColorHint="#a0a0a0"
            android:textSize="16sp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textColor="#363636"
                android:text="联系我们"
                />
            <com.example.youhe.youhecheguanjiaplus.widget.ClearEditText
                android:id="@+id/shoujihao_et"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="10dp"
                android:lines="1"
                android:paddingRight="10dp"
                android:hint="请输入您的邮箱"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textColorHighlight="#a0a0a0"
                />



        </LinearLayout>
        <RelativeLayout
            android:id="@+id/dengluq"
            android:onClick="denglu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            >

            <ImageView
                android:id="@+id/imggg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="tuichu"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/affirmbutton3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="提交"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                />

        </RelativeLayout>
    </LinearLayout>



</ScrollView>
