<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:id="@+id/ry"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_size"
        android:layout_alignParentTop="true"
        android:background="@color/new_color_primary">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:clickable="true"
            android:src="@drawable/icon_back"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/textView"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="添加快递单号"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@color/lucency"
            />

    </RelativeLayout>


    <!--<EditText-->
        <!--android:id="@+id/express_name_et"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:hint="请填写快递公司名称"-->
        <!--android:padding="16dp"-->
        <!--android:background="@color/white"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:drawableLeft="@drawable/wuliugongsi"-->
        <!--android:drawablePadding="10dp"-->
        <!--/>-->

    <EditText
        android:id="@+id/express_code_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请填写寄出快递单号"
        android:padding="16dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/kuaididanhao"
        android:drawablePadding="10dp"
        />



    <Button
        android:id="@+id/makesure_add_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认添加"
        android:background="@drawable/affirmbutton3"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:padding="10dp"
        />


</LinearLayout>