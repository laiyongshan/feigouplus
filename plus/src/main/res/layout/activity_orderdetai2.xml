    <RelativeLayout
        android:id="@+id/bbbs"
        android:layout_below="@+id/order_code_rl"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#929292"
        >
    </RelativeLayout>

    <com.example.youhe.youhecheguanjiaplus.widget.MyListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:layout_below="@+id/order_code_rl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </com.example.youhe.youhecheguanjiaplus.widget.MyListView>

    <RelativeLayout
        android:id="@+id/lay2"
        android:background="#929292"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/lay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/lay"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#929292"
                    android:text="总金额 :"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#929292"
                        android:text="￥"
                        />
                    <TextView
                        android:id="@+id/zonfa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#929292"
                        android:text=""
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#929292"
                    android:text="总扣分:"
                    />

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/zonfuwu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#929292"
                        android:text=""
                        />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/dengluq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <!--<ImageView-->
                <!---->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="40dp"-->
                <!--android:text="去支付"-->
                <!--android:textColor="#FFFFFF"-->
                <!--android:textSize="22sp"-->
                <!--android:background="@drawable/affirmbutton2"-->
                <!--android:padding="10dp"-->
                <!--/>-->

            <TextView
                android:id="@+id/gotopay_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="去支付"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:background="@color/new_color_primary"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="10dp"
                />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
